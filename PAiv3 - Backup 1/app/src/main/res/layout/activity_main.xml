<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:outlineAmbientShadowColor="#FFFFFF"
    android:outlineSpotShadowColor="#EFEAEA"
    tools:context=".MainActivity">

    <SearchView

        android:id="@+id/searchView"
        android:layout_width="409dp"
        android:layout_height="65dp"
        android:actionViewClass="android.widget.SearchView"
        android:background="#B6A50E"
        android:onClick="setOnQueryTextListener"
        android:outlineAmbientShadowColor="#100F0F"
        android:outlineSpotShadowColor="#050505"
        app:layout_constraintBottom_toTopOf="@+id/listViewWatchlist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:showAsAction="always" />

    <ListView
        android:id="@+id/listViewWatchlist"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/searchView"
        tools:layout_editor_absoluteX="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>