<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="256dp"
                        android:layout_height="290dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewSite1"
                            android:layout_width="264dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center|center_horizontal|left"
                            android:hint="Source 1" />

                        <TextView
                            android:id="@+id/textViewSite2"
                            android:layout_width="265dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center|center_horizontal|left"
                            android:hint="Source 2" />

                        <TextView
                            android:id="@+id/textViewSite3"
                            android:layout_width="265dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center|center_horizontal|left"
                            android:hint="Source 3" />

                        <TextView
                            android:id="@+id/textViewSite4"
                            android:layout_width="264dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center|center_horizontal|left"
                            android:hint="Source 4" />

                        <TextView
                            android:id="@+id/textViewSite5"
                            android:layout_width="264dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center|center_horizontal|left"
                            android:hint="Source 5" />

                        <TextView
                            android:id="@+id/textViewSite6"
                            android:layout_width="264dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center|center_horizontal|left"
                            android:hint="Source 6" />
                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_weight="15">

                        <RadioButton
                            android:id="@+id/radioButton1"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_weight="2" />

                        <RadioButton
                            android:id="@+id/radioButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_weight="2" />

                        <RadioButton
                            android:id="@+id/radioButton3"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_weight="2" />

                        <RadioButton
                            android:id="@+id/radioButton4"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_weight="2" />

                        <RadioButton
                            android:id="@+id/radioButton5"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_weight="2" />

                        <RadioButton
                            android:id="@+id/radioButton6"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_weight="2" />
                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>